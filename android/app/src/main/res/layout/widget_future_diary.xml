<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌟 미래일기"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/widget_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 0"
            android:textSize="10sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- 오늘 일정 섹션 -->
    <TextView
        android:id="@+id/widget_today_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="☀️ 오늘 일어날 일"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/widget_today_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="📝 오늘 계획된 일정이 없습니다"
        android:textSize="11sp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- 미래 일기 섹션 -->
    <TextView
        android:id="@+id/widget_future_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="🔮 미래 일기"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <LinearLayout
        android:id="@+id/widget_future_item1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_future_item1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_future_item1_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="11sp"
                android:textColor="#4A90E2"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_future_item1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_future_item2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/widget_future_item2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="#888888"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_future_item2_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textSize="11sp"
                android:textColor="#4A90E2"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_future_item2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 하단 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_future_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Future: 0"
            android:textSize="10sp"
            android:textColor="#4A90E2" />

        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="9sp"
            android:textColor="#999999" />

    </LinearLayout>

</LinearLayout> 